<%= render 'role/header' %>
<div class="post-show">
  <div class="post-red-title">Column<span class="post-orange-title">Check</span></div>
  <div class="posts-box">
    <h2 class="post-name">
      <%= "#{@post.title}"%><span class="post-orange-name">に適切なカラム名をつけてください</span>
    </h2>
    <div class="post-explain-box">
      <span><%= @post.description %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-post">投稿者</th>
          <td class="detail-value"><%= @post.user.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
  <div class="comment-wrapper">
    <% if user_signed_in? %>
    <div class="comment-form">
      <%= form_with(model: [@post, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする",row: 4, class: "comment-input" %>
        <%= form.submit "SEND", class: "comment-submit" %>
      <% end %>
    </div>
    <% end %>

    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
      <div class="comment-show">
        <p class ="comment-name">
          <%=comment.user.name %>
        </p>
        <p class="comment-text">
          <%= comment.text %>          
        </p>
      </div>
      <% end %>
    </div>
  </div>

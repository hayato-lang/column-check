<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
     Column-Check
     ログイン
    </h1>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span><br />
      <%= f.email_field :email, class:"input-default", autofocus: true, placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
      <%= f.password_field :password, class:"input-default", placeholder:"", autocomplete: "current-password" %>
    </div>
  </div>

  <%# <% if devise_mapping.rememberable? %>
    <%# <div class="field"> %>
      <%# <%= f.check_box :remember_me %>
      <%# <%= f.label :remember_me %>
    <%# </div> %>
  <%# <% end %>

  <div class="login-btn">
    <%= f.submit "ログイン", class:"login-red-btn"%>
  </div>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>

<%= render "role/second-header"%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='form-header-text'>
     会員情報入力
    </h2>
  </div>

  <%= flash[:notice] %>
  <%= flash[:alert] %>

  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span><br />
      <%= f.email_field :email, class:"input-default", autofocus: true, placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
      <%= f.password_field :password, class:"input-default", placeholder:"", autocomplete: "current-password" %>
    </div>

    <div class="login-btn">
      <%= f.submit "ログイン", class:"login-red-btn"%>
    </div>

  </div>
  <%= render "devise/shared/links" %>

  <%# <% if devise_mapping.rememberable? %>
    <%# <div class="field"> %>
      <%# <%= f.check_box :remember_me %>
      <%# <%= f.label :remember_me %>
    <%# </div> %>
  <%# <% end %>
</div>

<% end %>



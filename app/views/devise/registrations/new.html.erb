<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='form-header-text'>
    Column-Check サインアップ
    </h2>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">名前</label>
      <span class="indispensable">必須</span><br />
      <%= f.text_area :name, class:"input-default", autofocus: true, autocomplete: "name", placeholder:"ニックネームでOK!" %>

      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default", placeholder:"PC・携帯どちらでも可"%>
      
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input-default", placeholder:"6文字以上の半角英数字"%>
      
      <label class="form-text">パスワード(確認用)</label>
      <span class="indispensable">必須</span><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-default", placeholder:"同じパスワードを入力して下さい"%>
  </div>

  <div class="login-btn">
    <%= f.submit "新規登録", class:"register-red-btn" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
